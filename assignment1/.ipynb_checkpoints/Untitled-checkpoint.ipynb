    "import matplotlib.pyplot as plt\n",
    "import numpy as np\n",
    "\n",
    "# 从[-1,1]中等距去50个数作为x的取值\n",
    "x = np.linspace(-1, 1, 50)\n",
    "print(x)\n",
    "y = 2*x + 1\n",
    "# 第一个是横坐标的值，第二个是纵坐标的值\n",
    "plt.plot(x, y)\n",
    "# 必要方法，用于将设置好的figure对象显示出来\n",
    "plt.show()"
